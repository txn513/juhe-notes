/* pages/my/myt.wxss */
page {
  background: #F6F6F6;
}
.head{
  /* border-bottom: 1rpx #F6F6F6 solid; */
  height: 190rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  background: #fff;
  width: 100%;
  margin-bottom: 10rpx;
}
.user-avatar{
  overflow:hidden;
  display: block;
  margin-left:20rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 1rpx solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
  margin-right: 50rpx; 
}
.user-nick {
  font-size: 34rpx;
  font-weight: bold;
  color: rgba(51,51,51,1);

}
.inner{
  width: 100%;
  display: flex;
  height: 160rpx;
  /* border-top: 2rpx rgb(242, 242, 242) solid; */
  background: #fff;
  margin-bottom: 10rpx; 
}
.inner_item{
  flex: 1;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.inner_item image{
  width: 40rpx;
  height: 40rpx;
}
.inner_item text{
  font-size: 24rpx;
  color: rgb(51, 51, 51);
  margin-top: 16rpx;
}
.list {
  width: 100%;
}
.list-item {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  background: #fff;
  padding: 0 40rpx;
}
.list-item text {
  font-size: 28rpx;
  line-height: 100rpx;
}