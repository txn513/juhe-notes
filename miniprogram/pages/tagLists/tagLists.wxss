.no-note {
  margin-top: 50rpx;
  color: #888;
  font-weight: 200;
}
.no-note navigator{
  border-radius: 4px;
  border: 1px solid #cecece;
  padding: 8rpx;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 10000;
  display: flex;
  justify-content: center;
  align-items: center;
}
.mask .content {
  margin-top: -200rpx;
  background: rgba(60, 152, 158,0.7);
  max-height: 500rpx;
  width: 400rpx;
  border-radius: 10rpx;
}
.mask .content-item {
  position: relative;
  height: 100rpx;
  width: 100%;
  text-align: center;
  color: #fff;
  line-height: 100rpx;
  border-bottom: 1rpx solid #fff;
  font-size: 30rpx;
}
.mask .content-item:last-child {
  border-bottom: none;
}
.share-wrap	.share-btn {
  position: absolute;
  height: 100%;
  width: 100%;
  opacity: 0;
  z-index: 99;
  top: 0;
}

.add-new {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  background: #fff;
  /* border: 1rpx solid #999; */
  box-shadow: 2rpx 0rpx 10rpx 5rpx #ccc;
  position: fixed;
  bottom: 134rpx;
  right: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.add-new.iphoneX {
  bottom: 200rpx;
}
.add-new .icon {
  width: 60rpx;
  height: 60rpx;
}