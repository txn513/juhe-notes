page {
  background: #f6f6f6; 
  /* 37989f */
}
.container {
  position: relative;
  padding-bottom: 120rpx;
  height: 100%;
}
.ainimation {
  transition: all .5s;
  -webkit-transition: all .5s;
}
.container.iphoneX {
  padding-bottom: 186rpx;
}
.container .wrap {
  margin-top: 2rpx;
  
  width: 100%;
}
.create-new-btn {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
  background: rgb(60, 152, 158);
  color: #fff;
}


