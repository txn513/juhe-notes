  transition: all .5s;
} */

.xt-button-circle {
  position: absolute;
  bottom: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  display: block;
  margin: 0 auto;
  margin-top: 100rpx;
  height: 120rpx;
  width: 120rpx;
  border-radius: 60rpx;
  background: rgb(60, 152, 158) none repeat scroll 0% 0%;
  box-shadow: 10rpx 20rpx 20rpx #eee, -10rpx 20rpx 20rpx #eee;
  text-align: center;
  line-height: 120rpx;
  font-size: 14px;
  color: #fff;
  text-decoration: none;
  user-select: none;
}
.xt-button-circle:active {
  box-shadow: 5rpx 15rpx 10rpx #eee, -5rpx 15rpx 10rpx #eee;
}
.goToAllNotes {
  margin-top: 40rpx;
}
.goToAllNotes navigator {
  color: #CECECE;
  text-decoration: underline;
}

.userinfo{
    margin-top: 80rpx;
    height: 140rpx;
    width: 300rpx;
    border-top: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    transition: all 300ms ease;
}

.userinfo-avatar {
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx;
    border-radius: 50%;
}
.disable {
    color: #888;
}
