/**index.wxss**/
page {
    background: #fff;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.animation {
  transition: all .5s;
}
.container {
  position: relative;
  overflow: hidden;
}
.section {
  position: relative;
  width: 100%;
  padding: 0;
}
.xt-textarea {
  box-sizing: content-box;
  padding: 20rpx 0rpx 20rpx;
  width: 710rpx;
  margin: 0 20rpx;
  /* border-radius: 4px; */
  /* background: #fff; */
  /* box-shadow: 5rpx 10rpx 20rpx #eee,-5rpx 0 20rpx #eee; */
  font-weight: 200;
  text-align: left;
  line-height: 50rpx;
  font-size: 34rpx;
}
