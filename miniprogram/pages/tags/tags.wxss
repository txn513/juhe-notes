.mask {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 10000;
  display: flex;
  justify-content: center;
  align-items: center;
}
.mask .content {
  background: rgba(0,0,0,0.7);
  max-height: 500rpx;
  width: 400rpx;
  border-radius: 10rpx;
}
.mask .content-item {
  height: 100rpx;
  width: 100%;
  text-align: center;
  color: #fff;
  line-height: 100rpx;
  border-bottom: 1rpx solid #fff;
  font-size: 30rpx;
}
.mask .content-item:last-child {
  border-bottom: none;
}
.add-new {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  background: #fff;
  /* border: 1rpx solid #999; */
  box-shadow: 2rpx 0rpx 10rpx 5rpx #ccc;
  position: fixed;
  bottom: 234rpx;
  right: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.add-new.iphoneX {
  bottom: 300rpx;
}
.add-new .icon {
  width: 60rpx;
  height: 60rpx;
}


.single-note-top {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
}
.single-note-top .icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.add-wrap {
  background: #fff;
  width: 100%;
  display: flex;
  justify-content: center;
}
.ad {
  border-radius: 8rpx;
  margin-top: 20rpx;
  height: 140rpx;
}

.create-new-btn {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
  background: rgb(60, 152, 158);
  color: #fff;
}